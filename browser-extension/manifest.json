{
  "manifest_version": 3,
  "name": "ScamVigil",
  "version": "2.0.0",
  "description": "Australia's #1 scam protection. Scan profiles, verify emails, detect phishing links & protect yourself from online fraud.",
  "author": "ScamVigil",
  "homepage_url": "https://scamvigil.com.au",
  
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "alarms",
    "contextMenus",
    "clipboardRead"
  ],
  
  "host_permissions": [
    "https://*.facebook.com/*",
    "https://*.instagram.com/*",
    "https://*.twitter.com/*",
    "https://*.x.com/*",
    "https://*.linkedin.com/*",
    "https://*.convex.cloud/*",
    "https://api.a0.dev/*"
  ],
  
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["https://*.facebook.com/*"],
      "js": ["content-scripts/facebook.js"],
      "css": ["styles/badge.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://*.instagram.com/*"],
      "js": ["content-scripts/instagram.js"],
      "css": ["styles/badge.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://*.twitter.com/*", "https://*.x.com/*"],
      "js": ["content-scripts/twitter.js"],
      "css": ["styles/badge.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://*.linkedin.com/*"],
      "js": ["content-scripts/linkedin.js"],
      "css": ["styles/badge.css"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icon-16.png",
      "32": "assets/icon-32.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    },
    "default_title": "ScamVigil - Scan This Profile"
  },
  
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  
  "commands": {
    "scan-profile": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Scan current profile"
    }
  },
  
  "options_page": "popup/options.html",
  
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "styles/*"],
      "matches": ["https://*/*"]
    }
  ]
}